<main id='create'>
    {{#if errors}}
        <div>
            <div class='errorContainer'>
                {{#each errors}}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        </div>
    {{/if}}
    <section id='create-container'>
        <div class='create-container-info'>
            <h1>Create Game Code Offer</h1>
            <h4>Post your code to sell</h4>
            <form method='post'>
                <label>Platform:</label>
                <select id='platform' name='platform'>
                    {{#if errors.platform}}
                    <option value=''>-------</option>
                    <option value='PC'>PC</option>
                    <option value='Nintendo'>Nintendo</option>
                    <option value='PS4'>PS4</option>
                    <option value='PS5'>PS5</option>
                    <option value='XBOX'>XBOX</option>
                    {{else}}
                        {{#each platformOptions}}
                        <option value='{{this.value}}' {{#if this.isTrue}} selected {{/if}}>{{this.option}}</option>
                        {{/each}}
                    {{/if}}
                </select>
                <label>Name:</label>
                <input type='text' id='name' name='name' {{#unless errors.name}} value="{{name}}" {{/unless}}/>
                <label>Image:</label>
                <input type='text' id='image' name='imageUrl' placeholder='http://...'{{#unless errors.name}} value="{{imageUrl}}" {{/unless}} />
                <label>Price:</label>
                <input type='number' id='price' name='price' {{#unless errors.name}} value="{{price}}" {{/unless}}/>
                <label>Genre:</label>
                <input type='text' id='genre' name='genre' {{#unless errors.name}} value="{{genre}}" {{/unless}}/>
                <label>Description:</label>
                    {{#unless errors.description}} 
                        <textarea id="description" placeholder="Description..." name="description" >{{description}}</textarea>
                        {{else}}
                        <textarea id="description" placeholder="Description..." name="description" ></textarea>
                    {{/unless}}
                <input type='submit' id='btn' value='CREATE' />
            </form>
        </div>
    </section>
</main>