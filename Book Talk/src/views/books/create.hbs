<section class='create-form-container'>

    <form method='post'>
        <h3>Create Book Review</h3>
        <label>Title</label>
        <input type='text' name='title' class='box' id='title' {{#unless errors.bookTitle}} value="{{bookTitle}}" {{/unless}}/>
        <label>Author</label>
        <input type='text' name='author' class='box' id='author' {{#unless errors.author}} value="{{author}}" {{/unless}}/>
        <label>Genre</label>
        <input type='text' name='genre' class='box' id='genre' {{#unless errors.genre}} value="{{genre}}" {{/unless}}/>
        <label>Stars</label>
        <input type='number' name='stars' class='box' id='stars' {{#unless errors.stars}} value="{{stars}}" {{/unless}}/>
        <label>Image</label>
        <input type='text' name='imageUrl' class='box' id='imageUrl' {{#unless errors.imageUrl}} value="{{imageUrl}}" {{/unless}}/>
        <label>Review</label>
         {{#unless errors.review}} 
            <textarea class='box' name='review'>{{review}}</textarea>
            {{else}}
            <textarea class='box' name='review'></textarea>
        {{/unless}}
        <input type='submit' value='Create' class='btn' />
    </form>
</section>