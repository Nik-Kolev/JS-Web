<html lang='en'>

    <head>
        <meta charset='UTF-8' />
        <meta http-equiv='X-UA-Compatible' content='IE=edge' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <link rel='stylesheet' href='/styles/styles.css' />
        <title>{{title}}</title>
    </head>

    <body>
        {{#if errors}}
            <div>
                <div class='errorContainer'>
                    {{#each errors}}
                        <p>{{this}}</p>
                    {{/each}}
                </div>
            </div>
        {{/if}}
        <div id='wrapper'>
            <header>
                <!-- Navigation -->
                <nav>
                    <div>
                        <a href='/'>Home</a>
                        <a href='#'>Dashboard</a>
                        <a href='#'>Search</a>
                    </div>

                    <!-- Logged-in users -->
                    <div class='user'>
                        <a href='#'>Add Animal</a>
                        <a href='/logout'>Logout</a>
                    </div>

                    <!-- Guest users -->
                    <div class='guest'>
                        <a href='#'>Login</a>
                        <a href='/register'>Register</a>
                    </div>
                </nav>
            </header>
            {{{body}}}
            <footer>
                <p>@Friendly World</p>
            </footer>
        </div>
    </body>

</html>