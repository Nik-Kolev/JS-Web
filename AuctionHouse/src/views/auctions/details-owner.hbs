
            <section id="catalog-section">

                <h1 class="item">
                   {{auctionTitle}}
                    <div class="f-right">
                        <a class="action pad-small f-left" href="/edit/{{_id}}">Edit</a>
                        <a class="action pad-small f-left" href="/delete/{{_id}}">Delete</a>
                    </div>
                </h1>
                <div class="item padded">

                    <div class="layout right large">
                        
                        <div class="col">
                            <img src="{{imageUrl}}" class="img-large">
                        </div>

                        <div class="content pad-med">

                            <p>In category: <strong>{{category}}</strong></p>
                            <p>{{description}}</p>

                            <div class="align-center">
                                <div>
                                    Current price: $<strong>{{price}}</strong>
                                </div>

                                <div>
                                    {{#if bids}}
                                    <!-- If there is a bidder -->
                                    Bid by <strong>{{author.fullName}}</strong>

                                    <!-- # Bonus: If there is a bidder --><!--

                                    <a class="action pad-med cta" href="#">Close Auction</a>
                                    
                                    # End of Bonus -->
                                    {{else}}
                                    <!-- If there are no bids -->
                                    No bids
                                    {{/if}}
                                </div>
                            </div>

                        </div>
                    </div>

                    <footer>Listed by Peter Jackson</footer>
                </div>

            </section>

        </main>
