<section id='create-section'>

    <h1 class='item'>Edit Auction</h1>

    <div class='item padded align-center'>

        <form class='layout left large' method='post'>

            <div class='col aligned'>
                <label>
                    <span>Title</span>
                    <input type='text' name='auctionTitle'{{#unless errors.auctionTitle}}  value='{{auctionTitle}}' {{/unless}} /></label>
                <label>
                    <span>Category</span>
                    <select name='category'>
                        {{#if errors.category}}
                        <option value='Real Estate'>Real Estate</option>
                        <option value='Vehicles'>Vehicles</option>
                        <option value='Furniture'>Furniture</option>
                        <option value='Electronics'>Electronics</option>
                        <option value='Other'>Other</option>
                        {{else}}
                        {{#each currentCategoryOption}}
                        <option value='{{this.value}}' {{#if this.isTrue}} selected {{/if}}>{{this.option}}</option>
                        {{/each}}
                    {{/if}}
                    </select>
                </label>
                <label>
                    <span>Image URL</span>
                    <input type='text' name='imageUrl' {{#unless errors.imageUrl}}  value='{{imageUrl}}' {{/unless}} />
                </label>
                <label>
                    <span>Starting price</span>
                    {{#if bids}}
                        <!-- If the current auction has a bidder, this input field should be disabled -->
                        <input type='number' name='price' value='{{price}}' disabled />
                    {{else}}
                        <input type='number' name='price' value='{{price}}' />
                    {{/if}}
                </label>
            </div>

            <div class='content pad-med align-center vertical'>
                <label>
                    <span>Description</span>
                    {{#unless errors.description}} 
                    <textarea name='description'>{{description}}</textarea>
                    {{else}}
                     <textarea name='description'></textarea>
                     {{/unless}}
                </label>

                <div class='align-center'>
                    <input class='action' type='submit' value='Update Listing' />
                </div>
            </div>

        </form>

    </div>

</section>